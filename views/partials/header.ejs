        :root {
            --primary: #25D366;
            --primary-dark: #128C7E;
            --sidebar-bg: #f0f2f5;
            --text-primary: #111b21;
            --text-secondary: #667781;
            --border-color: #e9edef;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', sans-serif;
        }

        body {
            height: 100vh;
            display: flex;
            background-color: var(--sidebar-bg);
        }
        .navbar{
            height: 100%;
            border-left: #000000;
        }
                   .navbar i {
                   /* padding: 0.6rem; */
                   border-radius: 50%;
                   transition: background 0.2s, color 0.2s, transform 0.2s;
                   font-size: 20px;
                   color: #667781;
                   cursor: pointer;
                   margin-bottom: 1rem;
                   }
               
               .navbar i:hover {
                   /* background-color: #e9edef; */
                     color: #2d9d5f;
  background-color: #e5f7ed;
                   transform: scale(1.12);
               }
        .icon{
            height: 100%;
            display: flex;
            flex-direction: column;
            margin-left: 1rem;
            align-items: center;
            justify-content: space-between;
        }

.user, .setting {
  display: flex;
  flex-direction: column;
       align-items: center;
            padding-top: 1rem;
            justify-content: space-between;
}

.icon-wrapper {
  position: relative;
  display: flex;
  justify-content: center;
  margin-top: 8px;
}

.icon-wrapper i {
  font-size: 1.2rem;
  color: #667781;
  cursor: pointer;
  transition: all 0.2s ease;
  padding: 2px;
  border-radius: 50%;
}

.icon-wrapper i:hover {
  color: #2d9d5f;
  background-color: #e5f7ed;
}

/* Tooltip styles */
.tooltip {
  position: absolute;
  left: 100%; /* Position to the right of the icon */
  top: 50%; /* Center vertically */
  transform: translateY(-50%); /* Center adjustment */
  margin-left: 10px; /* Space between icon and tooltip */
  background-color: #2d9d5f;
  color: white;
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 0.75rem;
  white-space: nowrap;
  opacity: 0;
  visibility: hidden;
  transition: all 0.2s ease;
  z-index: 10;
  pointer-events: none;
}

.icon-wrapper:hover .tooltip {
  opacity: 1;
  visibility: visible;
  /* top: calc(100% + 5px); */
   margin-left: 15px;
}






        /* Sidebar Styles */
        .sidebar {
            width: 35%;
            min-width: 400px;
            max-width: 550px;
            height: 100%;
            border-right: 1px solid var(--border-color);
            background-color: white;
            display: flex;
            flex-direction: column;
            overflow: hidden;
            margin-left: 1.5rem;
                border-left: 2px solid #fffbfbaf;/* Add this line */
        }

        /* Header */
        .sidebar-header {
            padding: 10px 16px;
            background-color: var(--sidebar-bg);
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid var(--border-color);
        }

        .user-profile {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: var(--primary);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 500;
        }

        .chat-name {
            font-size: 25px;
            font-weight: bolder;
            color: var(--text-primary);
        }

        .header-icons {
            display: flex;
            gap: 20px;
            color: var(--text-secondary);
        }
        .header-icons i{
                 transition:  color 0.2s, transform 0.2s;
               color: var(--text-secondary);
               cursor: pointer;
        }
         .header-icons i:hover {           
           color: #128C7E;
          transform: scale(1.12);
               }

        /* Search */
        .search-container {
            padding: 8px 10px;
            background-color: white;
        }

        .search-box {
            background-color: var(--sidebar-bg);
            border-radius: 8px;
            padding: 8px 12px;
            display: flex;
            align-items: center;
        }

        .search-box input {
            border: none;
            background: transparent;
            width: 100%;
            padding: 4px 8px;
            outline: none;
            font-size: 14px;
        }

        /* Contact List */
        .contact-list {
            flex: 1;
            overflow-y: auto;
        }

        /* .contact-item {
            display: flex;
            padding: 12px 16px;
            gap: 12px;
